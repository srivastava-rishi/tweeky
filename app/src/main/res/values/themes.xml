<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tweeky" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Simple_Theme_1" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimaryDark">@color/light_status_bar</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorAccent">@color/d_d1_blue2</item>
        <item name="android:navigationBarColor">@color/white2</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="colorPrimary">@color/Dc1_blue_2</item>
        <item name="colorOnPrimary">@color/White</item>
        <item name="colorSecondary">@color/Black</item>

        <!--<item name="otpViewStyle">@style/OtpWidget.OtpView</item>-->

        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/Grey_6_Dark</item>

        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/white</item>
        <item name="popupMenuBackground">@color/white</item>
    </style>


    <style name="Simple_Theme_2" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimaryDark">@color/light_status_bar</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorAccent">@color/d_d1_blue2</item>
        <item name="android:navigationBarColor">@color/white2</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="colorPrimary">@color/Dc1_blue_2</item>
        <item name="colorOnPrimary">@color/White</item>
        <item name="colorSecondary">@color/Black</item>

        <!--<item name="otpViewStyle">@style/OtpWidget.OtpView</item>-->

        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/Grey_6_Dark</item>

        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/white</item>
        <item name="popupMenuBackground">@color/white</item>

    </style>
</resources>