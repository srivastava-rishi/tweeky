<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rlBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
            android:id="@+id/vSeparator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_alignParentTop="true"
            android:background="#EFEEEE" />

        <ImageView
            android:id="@+id/ivRank"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvSortBy"
            android:src="@drawable/sort"
            android:visibility="visible" />

            <TextView
                android:id="@+id/tvSortBy"
                fontPath="fonts/Montserrat-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="Sort by "
                android:textColor="@color/chineseBlack2"
                android:textSize="@dimen/_10ssp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/tvSortType"
                fontPath="fonts/Montserrat-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSortBy"
                android:layout_centerInParent="true"
                android:text="Score"
                android:textColor="@color/chineseBlack2"
                android:textSize="@dimen/_6ssp"
                tools:ignore="MissingPrefix" />

        <View
            android:id="@+id/vSeparator2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_alignParentBottom="true"
            android:background="#EFEEEE" />

        </RelativeLayout>

    </RelativeLayout>


</layout>